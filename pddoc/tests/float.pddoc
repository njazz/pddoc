            <pdexample width="10" height="10" file="objects.pd"/>
        </example>
        <!-- inlets documentation -->
        <inlets>
            <inlet number="0" type="bang">outputs the currently stored value.</inlet>
            <inlet number="0" type="float">outputs the incoming number and stores it.</inlet>
            <inlet number="0" type="list">truncates to the first element, outputs it, and stores it.</inlet>
            <inlet number="1" type="float">a float received on the right inlet is stored.</inlet>
        </inlets>
        <!-- outlets documentation -->
        <outlets>
            <outlet number="0" type="float">outputs the stored value as a float message.</outlet>
        </outlets>
        <!-- arguments documentation -->
        <arguments>
            <argument type="float"> [float] accepts a single number as a creation
                argument which sets the value that is stored.
            </argument>
        </arguments>
